<body>

   <h1>Shopping List</h1>
   <p>Get it done today</p>

   <input type="text" id="inputText">
   <!-- add a button here for adding new item -->
   <button id="btnadd" onclick="addItem()">Enter</button>
   <ul>
      <li>Notebook<!--<button>Delete</button></li>-->
      <li>Jello</li>
      <li>Spinach</li>
      <li>Rice</li>
      <li>Birthday Cake</li>
      <li>Candles</li>
   </ul>

   <script>

      // add code here
    function addItem() {
        const newItemAdded = document.getElementById("inputText").value;
        const ulelem = document.getElementsByTagName("ul")[0];
        const lielem = document.getElementsByTagName("li");
        lielem.innerText = newItemAdded;
        ulelem.appendChild(lielem);
    }
    

   </script>

